<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>XValid</Title>
    <Version>1.0.0.2308</Version>
    <Authors>Devyus</Authors>
    <Description>A simple validator library for various things, such as email, credit card, ISBN and more.</Description>
    <Copyright>Â© 2023</Copyright>
    <PackageIcon>logo.png</PackageIcon>
    <RepositoryUrl>https://github.com/DevyusCode/XValid</RepositoryUrl>
    <PackageTags>validator;isbn;iban;credit card;coordinate;ip;domain</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <PackageProjectUrl>https://dev.peyronnet.group/xvalid/"</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\.github\images\logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
